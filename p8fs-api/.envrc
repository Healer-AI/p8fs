# P8FS API Development Environment
# Automatically loaded by direnv

# Set module root
layout python-venv
export P8FS_MODULES_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

# Add P8FS modules to PYTHONPATH
export PYTHONPATH="${P8FS_MODULES_ROOT}/p8fs-cluster/src:${P8FS_MODULES_ROOT}/p8fs-core/src:${P8FS_MODULES_ROOT}/p8fs-node/src:${P8FS_MODULES_ROOT}/p8fs-auth/src:${PYTHONPATH}"

# Development defaults
export P8FS_API_DEBUG=true
export P8FS_API_HOST=localhost
export P8FS_API_PORT=8000
export P8FS_LOG_LEVEL=INFO

